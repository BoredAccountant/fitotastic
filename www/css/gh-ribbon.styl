@import gh-ribbon-mixins unless ribbon-position is defined

//options
$background-color = #121621
$color = rgba(255, 255, 255, 0.9)
$position = 'top-right'

// ribbon
.github-ribbon, .download-ribbon
  background-color $background-color
  ribbon-position $position
  box-shadow 0 0 0px 1px lighten(desaturate($background-color, 20%), 5%) inset, 0 0 2px 1px white inset, 0 0 1em #888
  color $color
  display block
  position fixed
  text-align center
  text-decoration none
  text-shadow: 1px -1px 8px rgba(0,0,0,0.6)
  user-select none

.download-ribbon
  background-color #251
  box-shadow 0 0 0px 1px lighten(desaturate(#251, 20%), 5%) inset, 0 0 2px 1px white inset, 0 0 1em #392